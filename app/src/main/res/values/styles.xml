<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/AppTheme.ActionBarStyle</item>
        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>

        <!-- specify enter and exit transitions -->
        <item name="android:windowEnterTransition">@transition/fade_in_trans</item>
        <item name="android:windowExitTransition">@transition/fade_out_trans</item>
        <item name="android:windowReturnTransition">@transition/fade_in_trans</item>
        <item name="android:windowReenterTransition">@transition/fade_in_trans</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>


        <item name="android:fragmentEnterTransition">@transition/fade_in_trans</item>
        <item name="android:fragmentExitTransition">@transition/fade_out_trans</item>
        <item name="android:fragmentReturnTransition">@transition/fade_in_trans</item>
        <item name="android:fragmentReenterTransition">@transition/fade_in_trans</item>

        <!-- specify shared element transitions -->
        <item name="android:windowSharedElementEnterTransition">
            @transition/bounds_trans</item>
        <item name="android:windowSharedElementExitTransition">
            @transition/bounds_trans</item>
    </style>
